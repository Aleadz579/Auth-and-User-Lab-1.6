{% extends '/base.html.twig' %}

{% block body %}
    <style>
        .auth-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;

        }
        .auth-card {
            width: 100%;
            max-width: 380px;
            padding: 32px;
            background: #191d25;
            border-radius: 10px;
            box-shadow: 0 20px 40px rgba(0,0,0,.1);
        }

        .auth-card h1 {
            margin-bottom: 24px;
            text-align: center;
        }

        .auth-card label {
            font-weight: 600;
        }

        .auth-card input {
            width: 100%;
            padding: 10px 12px;
            margin-top: 6px;
            margin-bottom: 16px;
            border: 1px solid #ccd2da;
            border-radius: 6px;
        }
    </style>

    <main class="auth-wrapper">
        <div class="container auth-card">
            <section class="card auth__card">
                <header class="auth__header">
                    <h1>Password reset</h1>
                </header>
                <form id="NewPass" class="auth__form" method="post">
                    <div class="NewPassInput">
                        <label class="label" for="Pass1">New Password</label>
                        <input type="password" class="input" id="Pass1" name="Pass1" required>
                    </div>

                    <div class="NewPassInputConfirm">
                        <label class="label" for="Pass2">Confirm Password</label>
                        <input type="password" class="input" id="Pass2" name="Pass2" required>
                    </div>
                    <span id="SamePass" style="display:none;">Passwords must be identical!</span>
                    <span id="PassChanged" style="display:none;">Password successfully changed!</span>
                    <span id="PassTooWeak" style="display:none; color: red">New Password is too Weak!</span>
                    <div class="actions">
                        <button class="btn btn--primary" type="submit">Reset Password</button>
                        <a class="link muted" href="/login">Back to login</a>
                    </div>
                </form>
            </section>
        </div>
    </main>

    <script>
        (() => {
        const NewPass = document.getElementById('NewPass');
        if (!NewPass || NewPass.dataset.bound) return;
            NewPass.dataset.bound = "1";


            NewPass.addEventListener('submit', async (e) => {
                e.preventDefault();

                const pass1 = document.getElementById('Pass1').value;
                const pass2 = document.getElementById('Pass2').value;

                if (pass1 !== pass2) {
                    document.getElementById('SamePass').style.display = 'inline';
                    document.getElementById('PassChanged').style.display = 'none';
                    return;
                }

                const res = await fetch(NewPass.action, {
                    method: 'POST',
                    body: new FormData(NewPass),
                    headers: { 'X-Requested-With': 'XMLHttpRequest', 'Accept': 'application/json' },
                    credentials: 'include'
                });

                const data = await res.json();
                const changed = !!data.result?.isChanged;

                document.getElementById('PassChanged').style.display = changed ? 'inline' : 'none';
                document.getElementById('SamePass').style.display = changed ? 'none' : 'inline';

                if (!changed) {
                    document.getElementById('PassTooWeak').style.display = 'inline';
                    document.getElementById('SamePass').style.display = 'none';
                }else {
                    document.getElementById('PassChanged').style.display = 'inline';
                }
            });


        })();
    </script>
{% endblock %}
