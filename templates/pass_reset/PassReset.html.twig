{% extends '/base.html.twig' %}

{% block body %}
    <style>
        .auth-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;

        }
        .auth-card {
            width: 100%;
            max-width: 380px;
            padding: 32px;
            background: #191d25;
            border-radius: 10px;
            box-shadow: 0 20px 40px rgba(0,0,0,.1);
        }

        .auth-card h1 {
            margin-bottom: 24px;
            text-align: center;
        }

        .auth-card label {
            font-weight: 600;
        }

        .auth-card input {
            width: 100%;
            padding: 10px 12px;
            margin-top: 6px;
            margin-bottom: 16px;
            border: 1px solid #ccd2da;
            border-radius: 6px;
        }
    </style>

    <main class="auth-wrapper">
        <div class="container auth-card">

            <section class="card auth__card">
                <header class="auth__header">
                    <h1>Password reset</h1>
                    <p class="muted">Enter your email and we’ll send you a reset link.</p>
                </header>

                <form id="emailForm" class="auth__form" method="post">
                    <div class="field">
                        <label class="label" for="email">Email</label>
                        <input class="input" id="emailInput" name="email" type="email" autocomplete="email" required>
                        <small id="EmailHint" class="hint muted">If an account exists, you’ll receive an email.</small>
                        <span id="SentHint" style="display:none; color: greenyellow">Email sent!</span>
                        <span id="ExistHint" style="display:none; color: red">This Email isn't connected to any Account!</span>
                    </div>

                    <div class="actions">
                        <button class="btn btn--primary" type="submit">Send reset link</button>
                        <a class="link muted" href="/login">Back to login</a>
                    </div>
                </form>
            </section>

        </div>
    </main>

    <script>
        (() => {
            const emailForm = document.getElementById('emailForm');
            if (!emailForm || emailForm.dataset.bound) return;
            emailForm.dataset.bound = "1";

            emailForm.addEventListener('submit', async (e) => {
                e.preventDefault();

                const res = await fetch(emailForm.action, {
                    method: 'POST',
                    body: new FormData(emailForm),
                    headers: { 'X-Requested-With': 'XMLHttpRequest', 'Accept': 'application/json' },
                    credentials: 'include'
                });

                const data = await res.json();
                const sent = !!data.result?.isSent;

                document.getElementById('EmailHint').style.display = 'none';
                document.getElementById('SentHint').style.display = sent ? 'inline' : 'none';
                document.getElementById('ExistHint').style.display = sent ? 'none' : 'inline';
            });
        })();
    </script>

{% endblock %}
