{% extends '/base.html.twig' %}

{% block body %}
    <style>
        .auth-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;

        }
        .auth-card {
            width: 100%;
            max-width: 380px;
            padding: 32px;
            background: #191d25;
            border-radius: 10px;
            box-shadow: 0 20px 40px rgba(0,0,0,.1);
        }

        .auth-card h1 {
            margin-bottom: 24px;
            text-align: center;
        }

        .auth-card label {
            font-weight: 600;
        }

        .auth-card input {
            width: 100%;
            padding: 10px 12px;
            margin-top: 6px;
            margin-bottom: 16px;
            border: 1px solid #ccd2da;
            border-radius: 6px;
        }
    </style>

    <main class="auth-wrapper">
        <div class="container auth-card">

            <section class="card auth__card">
                <header class="auth__header">
                    <h1>Password reset</h1>
                    <p class="muted">Enter your email and we’ll send you a reset link.</p>
                </header>

                <form id="emailForm" class="auth__form" method="post">
                    <div class="field">
                        <label class="label" for="email">Email</label>
                        <input class="input" id="emailInput" name="email" type="email" autocomplete="email" required>
                        <small id="EmailHint" class="hint">If an account exists, you’ll receive an email.</small>
                    </div>

                    <div class="actions">
                        <button id="sendResetBtn" class="btn btn--primary" type="submit">Send reset link</button>
                        <a class="link muted" href="/login">Back to login</a>
                    </div>
                    <span id="countdown"  style="color: darkgrey"></span>
                </form>
            </section>

        </div>
    </main>

    <script>
        const el = document.getElementById('countdown');
        const emailForm = document.getElementById('emailForm');
        const btn = document.getElementById('sendResetBtn');

        if (emailForm && btn && el) {
            emailForm.addEventListener('submit', async (e) => {
                e.preventDefault();

                const end = Date.now() + 60 * 1000;

                btn.disabled = true;

                const timer = setInterval(() => {
                    const remaining = end - Date.now();

                    if (remaining <= 0) {
                        clearInterval(timer);
                        btn.disabled = false;
                        el.textContent = "";
                        return;
                    }

                    const totalSeconds = Math.ceil(remaining / 1000);
                    const mins = String(Math.floor(totalSeconds / 60)).padStart(2, '0');
                    const secs = String(totalSeconds % 60).padStart(2, '0');

                    el.textContent = `Didn't receive an email? Try again in ${mins}:${secs}`;
                }, 250);

                const res = await fetch(emailForm.action, {
                    method: 'POST',
                    body: new FormData(emailForm),
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'Accept': 'application/json'
                    },
                    credentials: 'include'
                });

                const data = await res.json();



            });
        }
    </script>


{% endblock %}
