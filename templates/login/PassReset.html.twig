{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .auth-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;

        }
        .auth-card {
            width: 100%;
            max-width: 380px;
            padding: 32px;
            background: #191d25;
            border-radius: 10px;
            box-shadow: 0 20px 40px rgba(0,0,0,.1);
        }

        .auth-card h1 {
            margin-bottom: 24px;
            text-align: center;
        }

        .auth-card label {
            font-weight: 600;
        }

        .auth-card input {
            width: 100%;
            padding: 10px 12px;
            margin-top: 6px;
            margin-bottom: 16px;
            border: 1px solid #ccd2da;
            border-radius: 6px;
        }
    </style>

    <main class="auth-wrapper">
        <div class="container auth-card">

            <section class="card auth__card">
                <header class="auth__header">
                    <h1>Password reset</h1>
                    <p class="muted">Enter your email and we’ll send you a reset link.</p>
                </header>

                <form id="emailInput" class="auth__form" method="post">
                    <div class="field">
                        <label class="label" for="email">Email</label>
                        <input class="input" id="emailInput" name="email" type="email" autocomplete="email" required>
                        <small id="EmailHint" class="hint muted">If an account exists, you’ll receive an email.</small>
                        <span id="SentHint" style="display:none;">Email sent!</span>
                        <span id="ExistHint" style="display:none;">This Email isn't connected to any Account!</span>
                    </div>

                    <div class="actions">
                        <button class="btn btn--primary" type="submit">Send reset link</button>
                        <a class="link muted" href="/login">Back to login</a>
                    </div>
                </form>
            </section>

        </div>
    </main>

    <script>
        const form = document.getElementById('emailInput');

        if (form) {
            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                const res = await fetch(form.action, {
                    method: 'POST',
                    body: new FormData(form),
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    credentials: 'include'
                });

                const input = document.getElementById('emailInput');
                const email = input.value;

                const data = await res.json();

                if (data.emailSent) {
                    document.getElementById('SentHint').style.display = 'inline';
                    document.getElementById('EmailHint').style.display = 'none';
                } else
                {
                    document.getElementById('ExistHint').style.display = 'inline';
                    document.getElementById('EmailHint').style.display = 'none';
                }
            });}
    </script>
{% endblock %}
